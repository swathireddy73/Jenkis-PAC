pipeline {
    agent any

    tools {
        maven 'maven'
    }

    stages {
        stage('Build') {
            steps {
                dir('/var/lib/jenkins/workspace/mvn/project-dir') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('project-dir') {
                    sh 'mvn test'
                }
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                dir('/var/lib/jenkins/workspace/mvn/project-dir') {
                    sh 'mvn deploy'
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline completed"
        }
        success {
            echo "Pipeline succeeded"
        }
        failure {
            echo "Pipeline failed"
        }
    }
}
