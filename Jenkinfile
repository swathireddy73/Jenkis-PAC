pipeline {
    agent any
    stages {
        stage("stage1") {
            steps {
                script {
                    // Function with dynamic parameters
                    def myfunc = { a, b ->
                        echo "Hello, welcome to functions concept"
                        echo "You passed a = ${a}, b = ${b}"
                    }

                    myfunc(10, 20)
                    myfunc(100, 200)
                }
            }
        }
    }
}
