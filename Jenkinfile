pipeline {
    agent any
    stages {
        stage("stage1") {
            steps {
                script {
                    // Define a function with untyped parameters and return value
                    def myfunc = { a, b ->
                        def result = a + b
                        echo "Hello, welcome to functions concept"
                        echo "Sum of ${a} and ${b} is ${result}"
                        return result
                    }

                    def res1 = myfunc(10, 20)
                    def res2 = myfunc(100, 200)

                    echo "Result 1: ${res1}"
                    echo "Result 2: ${res2}"
                }
            }
        }
    }
}
