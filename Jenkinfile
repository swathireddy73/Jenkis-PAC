pipeline {
    agent any

    parameters {
        choice(name: 'env', choices: ['dev', 'prod', 'sit', 'qa', 'pre-prod'], description: 'Select environment')
    }

    environment {
        subject = "jenkins pac"
    }

    stages {
        stage("stage1") {
            steps {
                script {
                    def var1 = 20
                    def string = "this is Jenkins pac"

                    echo "Hello, welcome to Jenkins PAC"
                    echo "Here are your user-defined variables: ${var1}, ${string}"
                    echo "Here is your global/predefined variable (build result): ${currentBuild.result}"
                    echo "Here is your global/predefined variable (build ID): ${currentBuild.id}"
                    echo "Here is your environment variable: ${env.subject}"
                    echo "Here is your job name: ${env.JOB_NAME}"
                    echo "Here is your selected parameter (env): ${params.env}"
                }
            }
        }
    }
}

